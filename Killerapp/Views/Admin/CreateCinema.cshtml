@model Killerapp.ViewModels.AdminViewModels.CreateCinemaViewModel
@{
    ViewData["Title"] = "CreateCinema";
}
<div class="row">
    <div class="col-lg-12 col-sm-12">
        <div class="cinemaform">
            <h2 class="text-center">CreateCinema</h2>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="form-group">
                    <select asp-for="Company">
                        <option>Pathé</option>
                        <option>Vue</option>
                        <option>Foroxity</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Place" class="control-label"></label>
                    <input asp-for="Place" class="form-control">
                </div>
                <button asp-controller="Admin" asp-action="CreateCinema" type="submit" class="btn btn-success btn-block">Create Cinema</button>
            </form>
        </div>
    </div>
</div>

