@model Killerapp.ViewModels.RegisterViewModel
<div class="container text-center">
    <div class="row">
        <div class="col-lg-3 col-md-6 col-xs-12">
            <div class="registerform">
                <h2 class="text-left">Register</h2>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" type="number" min="12" max="100">
                    </div>
                    <button asp-controller="Home" asp-action="Register" type="submit" class="btn btn-success btn-block">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>


