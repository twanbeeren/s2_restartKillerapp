@model Killerapp.ViewModels.Order.OrderViewModel
@using Models
<div class="row">
    <div class="col-lg-12">
        <div class="movieDetails">
            <img src="~/images/image1.jpg" />
            <ul>
                <li>Moviename</li>
            </ul>
            <h2>Rating: </h2>
        </div>
    </div>
</div>
<div class="row">
    <ul class="nav nav-pills nav-justified">
        @foreach (Cinema cinema in Model.Cinemas)
        {
            if(cinema == Model.Cinemas.First())
            {
                <li class="active"><a data-toggle="pill" href="#@cinema.ToString()">@cinema.Company @cinema.Place</a></li>
            }
            else
            {
                <li><a data-toggle="pill" href="#@cinema.ToString()">@cinema.Company @cinema.Place</a></li>
            }

        }
    </ul>

    <div class="tab-content">
        @foreach(Cinema cinema in Model.Cinemas)
        {
            if (cinema == Model.Cinemas.First())
            {
                <div id="@cinema.ToString()" class="tab-pane fade in active">
                <h3 class="text-center">Showtimes</h3>
                <ul class="list-group center-block">
                    <li class="list-group-item justify-content-between align-items-center">
                        Showtimes will be displayed over here
                    </li>
                </ul>
                </div>
            }
            else
            {
                <div id="@cinema.ToString()" class="tab-pane fade">
                <h3 class="text-center">Showtimes</h3>
                <ul class="list-group center-block">
                    <li class="list-group-item justify-content-between align-items-center">
                        Showtimes will be displayed over here
                    </li>
                </ul>
                </div>
            }

        }
        
    </div>
</div>


